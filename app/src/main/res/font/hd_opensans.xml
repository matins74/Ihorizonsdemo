<?xml version="1.0" encoding="utf-8"?>
<font-family xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:targetApi="o">

    <!-- regular -->
    <font
        android:font="@font/opensans_light"
        android:fontStyle="normal"
        android:fontWeight="300"
        app:font="@font/opensans_light"
        app:fontStyle="normal"
        app:fontWeight="300" />

    <font
        android:font="@font/opensans_lightitalic"
        android:fontStyle="italic"
        android:fontWeight="300"
        app:font="@font/opensans_lightitalic"
        app:fontStyle="italic"
        app:fontWeight="300" />

    <!-- regular -->
    <font
        android:font="@font/opensans_regular"
        android:fontStyle="normal"
        android:fontWeight="400"
        app:font="@font/opensans_regular"
        app:fontStyle="normal"
        app:fontWeight="400" />

    <font
        android:font="@font/opensans_italic"
        android:fontStyle="italic"
        android:fontWeight="400"
        app:font="@font/opensans_italic"
        app:fontStyle="italic"
        app:fontWeight="400" />

    <!-- semi bold -->
    <font
        android:font="@font/opensans_semibold"
        android:fontStyle="normal"
        android:fontWeight="600"
        app:font="@font/opensans_semibold"
        app:fontStyle="normal"
        app:fontWeight="600" />

    <font
        android:font="@font/opensans_semibolditalic"
        android:fontStyle="italic"
        android:fontWeight="600"
        app:font="@font/opensans_semibolditalic"
        app:fontStyle="italic"
        app:fontWeight="600" />

    <!-- bold -->
    <font
        android:font="@font/opensans_bold"
        android:fontStyle="normal"
        android:fontWeight="700"
        app:font="@font/opensans_bold"
        app:fontStyle="normal"
        app:fontWeight="700" />

    <font
        android:font="@font/opensans_bolditalic"
        android:fontStyle="italic"
        android:fontWeight="700"
        app:font="@font/opensans_bolditalic"
        app:fontStyle="italic"
        app:fontWeight="700" />

    <!-- extra bold -->
    <font
        android:font="@font/opensans_extrabold"
        android:fontStyle="normal"
        android:fontWeight="800"
        app:font="@font/opensans_extrabold"
        app:fontStyle="normal"
        app:fontWeight="800" />

    <font
        android:font="@font/opensans_extrabolditalic"
        android:fontStyle="italic"
        android:fontWeight="800"
        app:font="@font/opensans_extrabolditalic"
        app:fontStyle="italic"
        app:fontWeight="800" />
</font-family>