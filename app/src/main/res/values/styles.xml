<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="HDTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@android:color/transparent</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@drawable/blue_background</item>
        <item name="android:actionBarStyle">@style/action_bar_theme</item>
        <item name="actionBarStyle">@style/action_bar_theme</item>
        <item name="android:textViewStyle">@style/RobotoTextViewStyle</item>
        <item name="android:buttonStyle">@style/RobotoButtonStyle</item>
    </style>

    <style name="RobotoTextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/hd_opensans</item>
    </style>

    <style name="RobotoButtonStyle" parent="android:Widget.Holo.Button">
        <item name="android:fontFamily">@font/hd_opensans</item>
    </style>

    <style name="HDTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionModeOverlay">true</item>
    </style>

    <style name="HDTheme.DialogAnimation">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <style name="action_bar_theme" parent="@style/Widget.AppCompat.ActionBar">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="Button" parent="Widget.AppCompat.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/text_normal</item>
    </style>

    <style name="Button.Red" parent="Button">
        <item name="android:background">@drawable/btn_primary_action_red_selector</item>
    </style>

    <style name="Button.Blue" parent="Button">
        <item name="android:background">@drawable/btn_primary_action_blue_selector</item>
    </style>

    <style name="Button.White" parent="Button">
        <item name="android:textColor">@color/hd_text_grey</item>
        <item name="android:background">@drawable/btn_primary_action_white_selector</item>
    </style>

    <style name="Button.Link" parent="Button">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="Button.Link.Dark" parent="Button.Link">
        <item name="android:textColor">@color/hd_text_grey</item>
    </style>



    <style name="DatePickerButton" parent="@android:style/Widget.Holo.Light.Button.Borderless.Small">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="DatePicker" parent="@android:style/Theme.Holo.Light">
        <item name="android:datePickerStyle">@android:style/Widget.DatePicker</item>
    </style>

    <style name="HeaderBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/margin_regular</item>
        <item name="android:textColor">@color/hd_white</item>
        <item name="android:textSize">@dimen/text_normal</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SettingsHeader" parent="HeaderBar">
        <item name="android:background">@color/hd_blue</item>
    </style>

    <style name="BreadcrumbSeparatorView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:background">@color/hd_blue</item>
    </style>



    <style name="SettingsItem">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/padding_tiny</item>
        <item name="android:paddingBottom">@dimen/padding_tiny</item>
        <item name="android:textColor">@color/tab_text_color</item>
        <item name="android:textSize">@dimen/text_regular</item>
    </style>



    <style name="SwitchCompatTheme" >
        <item name="colorControlActivated">@android:color/holo_green_dark</item>
    </style>



</resources>
